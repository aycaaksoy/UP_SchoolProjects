@model List<EmployeeTask>
@{
    ViewData["Title"] = "EmployeeTaskListByProfile";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    int count = 0;
}

<h3>Görevleriniz</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Status</th>
        <th>Date</th>
        <th>Details</th>
        <th>Add</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Status</td>
            <td>@item.Date.ToString("dd.MMM.yyyy")</td>
            <td><a href="/Employee/EmployeeTaskDetail/Index/@item.EmployeeTaskID" class="btn btn-outline-warning">Details</a></td>
            <td><a href="#" class="btn btn-outline-dark">Add</a></td>
        </tr>
    }
</table>