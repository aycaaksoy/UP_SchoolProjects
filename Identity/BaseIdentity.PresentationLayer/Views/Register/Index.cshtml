@using BaseIdentity.Presentation.Layer.Models
@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Register</h1>

<br />
<div class="container">
    <form method="post">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-info"></span>
        <br />
        <label>Surname</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-info"></span>
        <br />
        <label>Username</label>
        <input type="text" class="form-control" asp-for="Username" />
        <span asp-validation-for="Username" class="text-info"></span>
        <br />
        <label>Email</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-info"></span>
        <br />
        <label>Password</label>
        <input type="text" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-info"></span>
        <br />
        <label>Confirm Password</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-info"></span>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-success"></div>
        <button class="btn btn-outline-primary">Register</button>
    </form>
</div>