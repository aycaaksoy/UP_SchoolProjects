
@using CQRS.CQRS.Results.ProductResults
@model List<GetProductByAccountantQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <h2>Accountant Panel</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Stock</th>
            <th>Details HR</th>
            <th>Details Accounting</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Name</td>
                <td>@item.Brand</td>
                <td>@item.Stock</td>
                <td><a href="/Product/GetHumanResourceIndex/@item.ProductId" class="btn btn-outline-dark">Details</a></td>
                <td><a href="/Product/AccountantIndexByID/@item.ProductId" class="btn btn-outline-dark">Accounting</a></td>
                <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
                <td><a href="#" class="btn btn-outline-success">Edit</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="#" class="btn btn-outline-primary"> Add New Record</a>
</div>